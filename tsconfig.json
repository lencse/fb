{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "jsx": "react",
        "removeComments": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
